CREATE KEYSPACE IF NOT EXISTS chat
WITH REPLICATION = {
  'class': 'SimpleStrategy',
  'replication_factor': 1
};


CREATE TABLE IF NOT EXISTS chat.messages (
    room_id TEXT,
    message_id UUID,
    sender_id TEXT,
    content TEXT,
    timestamp TIMESTAMP,
    PRIMARY KEY ((room_id), timestamp)
) WITH CLUSTERING ORDER BY (timestamp ASC);
